<%- include('partials/header') -%> 
<div class="container">
   <div class="row">
    
    <div class="col-md-5">
        <div class="card">
            <h2 class="card-title">Formulario</h1>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Ingrese su titulo porfavor" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" cols="8" placeholder="Ingrese su descripcion"> </textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block ">Agregar tarea</button>
                </form>
             </div>
        </div>
        
    </div>

     <div class="col-md-7">

        <table class="table table-hover">
           <thead>
           
            <th>Numero</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Operation</th>

           </thead>

           <tbody>
            <% for (var i=0;i<tareas.length;i++){ %> 

                 <tr>
                     <td> <%=i+1 %>  </td>
                     <td><%= tareas[i].title %> </td>
                     <td><%= tareas[i].description %> </td>
                     <td><%= tareas[i].status %> </td>
                     <td>
                        <a href=""class="btn btn-success">Success</a>
                        <a class="btn btn-danger " href="">Delete</a>
                        <a class="btn btn-secondary" href="">Edit</a>
                     </td>

                 </tr>
                

                <%   } %> 


           </tbody>


          </table>

     </div>

   </div>
  </div>